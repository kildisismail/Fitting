<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".Endeks"
    tools:ignore="ContentDescription">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/txtBoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:text="@string/boy_tv" />



        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:digits="0123456789"
            android:inputType="number"
            android:maxLength="3" >
            <requestFocus/>
        </EditText>
        <TextView
            android:id="@+id/txtBoyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/holo_blue_dark"
            android:padding="@dimen/padding_tv"
            android:text="1.75" />

        <TextView
            android:id="@+id/txtKilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:text="@string/kilo_tv" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="30"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:id="@+id/kilo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text=""
            tools:text="75kg" />
        <TextView
            android:id="@+id/cinsiyet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:text="Cinsiyet:" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:orientation="horizontal"
            android:id="@+id/radioGrup">

            <RadioButton
                android:id="@+id/radioBay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/Bay">

            </RadioButton>

            <RadioButton
                android:id="@+id/radioBayan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Bayan"
                android:layout_marginLeft="20dp">

            </RadioButton>


        </RadioGroup>

        <TextView
            android:id="@+id/Kilonuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:text="Ä°deal Kilonuz:" />

        <TextView
            android:id="@+id/kiloSonuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@android:color/holo_green_dark"
            android:layout_gravity="fill_horizontal"
            android:padding="@dimen/padding_tv"
            android:text="" />
        <TextView
            android:id="@+id/Durum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:text="Durum:" />

        <TextView
            android:id="@+id/durumSonuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@android:color/holo_red_dark"
            android:layout_gravity="fill_horizontal"
            android:padding="@dimen/padding_tv"
            android:text="" />



    </GridLayout>




</LinearLayout>


